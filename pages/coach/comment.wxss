page{background:#f6f6f6;position:relative;width:100%;height:100%;top:0px;left:0px;}
.header{height:55px; display:flex; justify-content:center; background:#fff; box-shadow:0 1px 10px 0 #E9E9E9; position:fixed; width:100%; top:0px; left:0px;z-index:1111}
.nav{font-size: 15px; color: #C2C2C2;margin:17px 30px;display:flex;justify-content:center;border-bottom:2px solid #fff;height:25px;line-height:25px;}
.nav.info_info,.nav.lesson_lesson,.nav.comment_comment{color:#E74747;border-color:#E74747}
.infoBox{background: #FFFFFF; box-shadow: 0 13px 13px 0 rgba(0,0,0,0.08); border-radius: 8px;margin:20px;height:97px;padding:23px}
.info{margin-left:8px;float:left}
.info .name{font-size: 14px; color: #555555;margin-bottom:5px;}
.info .skill{font-size: 12px; color: #666666;margin-bottom:20px;}
.tag{float:left;background: #E4EAF3; border-radius: 0.8px;margin-right:15px;height:19px;font-size: 10px; color: #777777;padding-right:6px;}
.tag image{width:19px;height:19px;background:#b4bfd1;vertical-align:middle;margin-right:6px;}
.infoBox .avatar{float:right;width:50px;border-radius:50%;overflow:hidden}
.info .price{font-size: 11px; color: #FF5656;margin-bottom:5px;}
.titleBox{font-size: 15px; color: #333333;margin:20px;margin-top:37px;height:20px;}
.titleBox .title{float:left}
.titleBox .more{float:right;font-size: 12px; color: #E74747;}
.introCon{font-size: 12px; color: #666666;margin:20px;margin-top:-10px;}
.line{width:calc(100% - 20px);border: 1px solid #EDEDED;margin-left:20px;margin-top:5px;}
.timeBox{margin:20px;margin-bottom:30px;}
.time{border: 1px solid #555555; border-radius: 100px;font-size: 13px; color: #555555;text-align:center;height:24px;line-height:24px;float:left;margin-right:15px;width:66px;}
.lessonList{margin:20px;margin-bottom:0px;}
.lessonList .lesson{margin-right:7.5px;float:left;width:calc(50% - 7.5px);margin-bottom:30px}
.lessonList .lesson image{width:100%;}
.lessonList .lesson .name{font-size: 14px; color: #333333; text-align: left;height:25px;line-height:25px}
.lessonList .lesson .intro{font-size: 11px; color: #999999;text-align:left;width:100%;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;height:18px;line-height:18px;}
.priceBox{color: #FF5656;position:relative;font-size: 10px;}
.priceBox .price{font-size:15px;height:30px;line-height:30px}
.priceBox text{font-size:10px;}
.buyBtn{background: #FF5656; border-radius: 100px;width:64px;height:25px;line-height:25px;color:#fff;text-align:center;font-size: 12px;position:absolute;right:0px;bottom:0px;}
.lessonList .lesson:nth-child(even){margin-right:0px;margin-left:7.5px;width:calc(50% - 7.5px)}
.star{float:left;margin-right:5px;width: 0; height: 0; color: #FFCF44; position: relative; display: block; border-left: 10px solid transparent; border-right: 10px solid transparent; border-bottom: 8px solid #FFCF44; -moz-transfrom:rotate(35deg); -webkit-transform:rotate(35deg); -ms-transform:rotate(35deg); -o-transform:rotate(35deg); } 
.gray.star{border-color:#999}
.star:before{ width: 0; height: 0; border-left: 3px solid transparent; border-right: 3px solid transparent; border-bottom: 8px solid #FFCF44; position: absolute; top: -5px; left: -8px; color: white; display: block; content: ""; -moz-transform:rotate(-35deg); -webkit-transform:rotate(-35deg); -ms-transform:rotate(-35deg); -o-transform:rotate(-35deg); } .star:after{ width: 0; height: 0; display: block; position: absolute; color: #FFCF44; top: 1px; left: -12px; border-left: 10px solid transparent; border-right: 10px solid transparent; border-bottom: 8px solid #FFCF44; content: ""; -moz-transform:rotate(-70deg); -webkit-transform:rotate(-70deg); -ms-transform:rotate(-70deg); -o-transform:rotate(-70deg); }
.gray.star:before{border-color:#999}
::-webkit-scrollbar {width: 0;height: 0;color: transparent;}
.commentList{margin-left:20px;padding-bottom:20px}
.commentList .list{min-height:92.5px;height:auto;position:relative;border-bottom: 1px solid #EBEBEB;}
.commentList .list .avatar{width:46px;height:46px;overflow:hidden;border-radius:50%;float:left;margin-top:10px;margin-right:9px}
.commentList .list .detail{float:left;}
.commentList .list .name,.commentList .list .content{font-size: 12px; color: #555555;margin-top:10px;}
.commentList .list .content{margin:5px 0px;}
.commentTime{font-size: 12px; color: #999999;position:absolute;right:20px;top:40px;}
.starList{margin-top:15px;height:18px;line-height:18px;}