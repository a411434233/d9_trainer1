page{background:#f6f6f6}
.listBox{margin-bottom:10px;padding:20px;}
.info{height:100px}
.coursePicture{float:left;width:120px;margin-right:15px;height:100px}
.courseInfo{float:left;position:relative;width:calc(100% - 135px)}
.courseName{font-size:16px;color:#333333;margin-top:25px;margin-bottom:5px;}
.coachName{font-size: 13px; color: #777777;margin-bottom:10px}
.arrow{transform:rotate(-45deg); border-bottom:2px solid #999999; border-right:2px solid #999999; position:absolute; width:6px; height:6px; top:47px; right:10px;}
.time{font-size: 13px; color: #999999;height:30px;line-height:30px;}
.amount{font-size: 14px; color: #333333;height:25px;line-height:25px;}
.amount image{float:left;width:32px;margin-right:5px;margin-top:2px;}
.totalPrice{font-size: 13px; color: #E74747;margin-top:3px;margin-bottom:-10px;}
.totalPrice text{font-size: 18px;}
.tit{font-size: 15px; color: #333333;margin-top:37px;margin-bottom:20px}
.qrcode{width:210px;margin:auto;display:block;}
.empty{font-size: 14px; color: #CCCCCC;height:100px;text-align:center;line-height:100px;}
.record .name{font-size: 13px; color: #333333;float:left;width:50px;margin-right:13px;}
.record{height:30px;}
.record .useTime{font-size: 12px;color: #999999;float:left;width:120px;margin-left:13px;}
.record .line{border-bottom:1px dotted #979797; float:left; width:calc(100% - 196px); height:2px; margin-top:6px;}