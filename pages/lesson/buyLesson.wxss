page{background:#f6f6f6}
.container{padding:20px}
.title{font-size: 15px; color: #333333;margin-bottom:15px;}
.info{margin-bottom:30px;height:100px}
image{float:left;width:120px;margin-right:15px;height:100px}
.courseInfo{float:left;}
.courseName{font-size: 16px; color: #333333;margin-top:5px;margin-bottom:12px}
.coachName{font-size: 13px; color: #777777;margin-bottom:10px}
.price{font-size: 10px; color: #FF5656;}
.price text{font-size: 15px; color: #FF5656;margin-right:3px;}
.numberBox{height:50px;border-bottom: 1px solid #EDEDED;line-height:50px;clear:both}
.numberBox .tit{float:left;height:50px;line-height:50px;font-size: 13px; color: #777777;}
.choseBox{float:right;}
.choseBox .btn{height:50px;line-height:50px;width:13px;font-size:20px;color:#777777;display:inline-block;float:left;}
.choseBox input{width:30px;float:left;border-bottom:1px solid #D3D3D3;margin:15px;font-size:15px;color:#FF5656;text-align:center;}
.totalPrice{font-size: 13px; color: #E74747;float:right}
.confirm{background:#E74747;border-radius:100px;height:45px;line-height:45px;width:90%;margin:auto;text-align:center;color:#fff;font-size:16px;box-shadow:0px 0px 100px 2px rgba(231,71,71,.2);margin-top:70px;position:fixed;bottom:20px;}
